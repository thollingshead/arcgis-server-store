@require './assets/styles/bootstrap-defaults'
@require './assets/styles/colors'

body
	padding-top $navbar-height

.sidebar
	display none

@media (min-width: $screen-sm)
	.sidebar
		position fixed
		top $navbar-height
		bottom 0
		left 0

		display block
		overflow-y auto

		padding 20px

		background-color $sidebar-bg
